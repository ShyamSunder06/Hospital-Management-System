  generator client {
  provider = "prisma-client-js"
  output   = "./generated/central"
}

datasource db {
  provider = "postgresql"
  url      = env("CENTRAL_DB_URL")
}

model Admin {
  id       String @id @default(uuid())
  email    String @unique
  name String @default("admin")
  password String
  hospitalCode String @default("")
  hospital Hospital @relation(fields: [hospitalCode],references: [code])
}

model Hospital {
  id      String @id @default(uuid())
  code    String @unique
  name    String
  location String
  city    String
  state   String
  dbURL   String
  records MedicalRecord[]
  admin Admin[]
  patientBooking PatientBooking[]
}

model Patient{
  abhaId String @id @unique
  email String @unique
  password String
  name String
  contact String
  address String
  gender String
  DOB String
  emergencyContact String
  medicalRecords MedicalRecord[]
  patientBooking PatientBooking[]
}

model PatientBooking{
  id Int @id @default(autoincrement())
  abhaId String
  patient Patient @relation(fields: [abhaId],references: [abhaId])
  hospitalCode String
  hospital Hospital @relation(fields: [hospitalCode],references: [code])
  date String
  time String
  status String @default("Upcoming")
  reason String
}

model MedicalRecord {
  id String @id @default(uuid())
  patientId String
  patient Patient @relation(fields: [patientId], references: [abhaId])
  hospitalCode String
  hospital Hospital @relation(fields: [hospitalCode],references: [id])
  recordDate DateTime @default(now())
  visitReason String
  medicationsPrescribed Json
  treatmentSummary String
  doctorName String
  followUpInstructions String?
  documents Json?
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
}

model ABHANumber{
  prev String @id
}

model OTPVerification{
    id String @id @default(uuid())
    email String @unique
    otp String
    createdAt DateTime @default(now())
    expiresAt DateTime
}

model BedRequest{
  id String @id @default(uuid())
  hospitalCode String
  patientAbhaId String @unique
  patientName String
  patientContact String
  wardName String
}